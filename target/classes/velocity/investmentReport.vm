#parse("/velocity/layout.vm")
#mainLayout()
<html>
    <script src="https://unpkg.com/jspdf@1.5.3/dist/jspdf.min.js"></script>
    <script src="https://unpkg.com/jspdf-autotable@3.2.13/dist/jspdf.plugin.autotable.js"></script>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>



    <style>
        [data-href] {
            cursor: pointer;
        }
        thead {
            background-color: rgb(0,51,102);
            color:white;
            font-size:117%
        }

        .opener {
            cursor: pointer;
            font-size:115%;

        }

        .hidden {
            display:none;
        }

        .containerTitle{
            border-bottom: double;
        }

        .bill {
            font-style: italic;
            background-color: #ebfcfc;
        }

        .rightbox{
            float:right;
            width:55%;
            margin-right:5%;
            margin-bottom:5%

        }

        .leftbox{
            position:fixed;
            float:left;
            width: 30%;
            margin-right:5%;
            margin-left: 5%;
            height:75%;
            margin-bottom:5%
        }

        .static {
            position: static;
        }
        .fixed{
            width: inherit;
            position: fixed;
        }

        footer {
            display: none;
        }

        @media screen and (max-width: 992px) {
            .rightbox{
                float:none;
                width:90%;
                margin-right:0%;
                margin-left: 5%;

            }
            .leftbox{
                position:static;
                float:none;
                width:90%;
            }
        }

        @media screen and (max-height: 650px) {

            .leftbox{
                position:static;

            }
        }

    </style>

    <body class="main">
        <div class="rightbox">
            <div class = "container content">
                <div class="containerTitle">
                    <h2>Investment report</h2>
                </div>

                <br>

                <table class="table table-hover fixed_header" id="myTable">
                    <thead>
                    <tr>
                        <th>Investments</th>
                        <th>Base</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr id="buildings" class="opener">
                        <td>Buildings</td>
                        <td>$report.getBuildingsBase()</td>
                    </tr>
                        #foreach($bill in $report.getBuildings())
                        <tr data-href="$bill.getUUID()" class="hidden buildings bill">
                            <td><li>$bill.getConcept()</li></td>
                            <td>$bill.getSubtotal()</td>
                        </tr>
                        #end
