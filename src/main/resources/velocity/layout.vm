			$('#billsNavRow').find('.righticon').toggleClass('fa-angle-down');
			var itemsToToggleClass = "." + $('#billsNavRow').attr("id");
			$(itemsToToggleClass).toggleClass("hidden");
			$('#timelineSubRow').toggleClass('overlay-subrow-selected');
		}
