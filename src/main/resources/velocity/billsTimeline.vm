#parse("/velocity/layout.vm")
#mainLayout()
<html>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
	* {
		box-sizing: border-box;
	}
	.butn {
		background-color: lightgrey;
		border: none;
		border-radius:50%;
		color: black;
		padding: 5px 7px;
		font-size: 22px;
		cursor: pointer;
	}

	.butn:hover {
		background-color: RoyalBlue;
	}

	.rightbox{
		float:right;
		width:70%;
		height:85%;
		margin-right:2%;
	}

	.leftbox{
		float:left;
		width:25%;
		margin-left:2%;
		margin-right:1%;

	}

	.billContainerAmount{
		border-top:solid 0.5px rgba(0,0,0,0.5);padding-left:65%; width:100%; box-sizing:border-box
	}

	.timelineContainer{
		height:100%;
		overflow-y: scroll;
	}

	footer {
		display:none;
	}


	.title{
		text-align: center;
	}
	/* The actual timeline (the vertical ruler) */
	.timeline {
		position: relative;
		max-width: 1200px;
		margin: 0 auto;
	}

	/* The actual timeline (the vertical ruler) */
	.timeline::after {
		content: '';
		position: absolute;
		width: 6px;
		background-color: darkgrey;
		top: 0;
		bottom: 0;
		left: 50%;
		margin-left: -3px;
	}

	/* Container around content */
	.billContainer {
		padding: 10px 40px;
		position: relative;
		background-color: inherit;
		width: 50%;
	}

	/* The circles on the timeline */
	.billContainer::after {
		content: '';
		position: absolute;
		width: 25px;
		height: 25px;
		right: -12px;
		background-color: white;
		border: 4px solid rgb(234,241,247);
		top: 15px;
		border-radius: 50%;
		z-index: 1;
	}

	/* Place the container to the left */
	.left {
		left: 0;

	}

	/* Place the container to the right */
	.right {
		left: 50%;

	}

	/* Add arrows to the left container (pointing right) */
	.left::before {
		content: " ";
		height: 0;
		position: absolute;
		top: 22px;
		width: 0;
		z-index: 1;
		right: 30px;
		border: medium solid darkgrey;
		border-width: 10px 0 10px 10px;
		border-color: transparent transparent transparent darkgrey;
	}

	/* Add arrows to the right container (pointing left) */
	.right::before {
		content: " ";
		height: 0;
		position: absolute;
		top: 22px;
		width: 0;
		z-index: 1;
		left: 30px;
		border: medium solid darkgrey;
		border-width: 10px 10px 10px 0;
		border-color: transparent darkgrey transparent transparent;
	}

	/* Fix the circle for containers on the right side */
	.right::after {
		left: -12px;
	}


	/* The actual content */
	.box {
		/*border:solid 1px;*/
		position: relative;
		border-radius:4px;
		cursor: pointer;
		/*box-shadow: 5px 5px 2.5px 0px rgba(0,0,0,0.75);*/
	}

	.box h2{
		padding:10px;
	}
	.box h4,h5{
		padding:10px;
	}
	.green {
		border:solid 1px rgb(198,239,206);
		border-top:2px solid rgb(198,239,206);
		background-color: rgb(198,239,206);
	}
	.green h2{
		color:rgb(44,97,0);
	}

	.orange {
		border:solid 1px rgb(255,235,156);
		border-top:2px solid rgb(255,235,156);
		background-color: rgb(255,235,156);
	}
	.orange h2{
		color:rgb(156,101,36);
	}

	.red {
		border:solid 1px rgb(255,199,206);;
		border-top:2px solid rgb(255,199,206);
		background-color: rgb(255,199,206);
	}
	.red h2{
		color:rgb(156,01,6);
	}

	.blue {
		border:solid 1px rgb(155,194,230);
		border-top:2px solid rgb(155,194,230);
		background-color: rgb(155,194,230);
	}
	.blue h2{
		color:white;
	}




	.box:hover{
		transform: scale(1.05);
		z-index: 1;
	}

	@media screen and (max-width:1400px){
		.rightbox{
			float:none;
			width:95%;
			margin-left:2%;
			margin-right:1%;
			margin-bottom:1%;
		}
		.leftbox{
			float:none;
			width:95%;
			margin-left:2%;
			margin-right:1%;
			margin-bottom:2%;
		}
	}

	/* Media queries - Responsive timeline on screens less than 600px wide */
	@media screen and (max-width: 930px) {
		/* Place the timelime to the left */
		.timeline::after {
			left: 31px;
		}

		/* Full-width containers */
		.billContainer {
			width: 100%;
			padding-left: 70px;
			padding-right: 25px;
		}

		.billContainerAmount{
			padding-left:65%;
		}

		/* Make sure that all arrows are pointing leftwards */
		.billContainer::before {
			left: 60px;
			border: medium solid white;
			border-width: 10px 10px 10px 0;
			border-color: transparent white transparent transparent;
		}

		/* Make sure all circles are at the same spot */
		.left::after, .right::after {
			left: 19px;
		}

		/* Make all right containers behave like the left ones */
		.right {
			left: 0%;
		}
	}

	@media screen and (max-width:400px){
		.rightbox{
			margin:2%;
			width:96%;
			height:95%
		}

		.timelineContainer{
			margin:0;
			padding:0
		}

		.billContainerAmount{
			padding-left:40%;
		}
	}

</style>
</head>
<body class="main">
	<!---
	<div class="title">
		<p style="font-size:150%; color=lightgray;display:inline">Bills Timeline</p>
		<button class="butn" data-toggle="modal" data-target="#myModal"><i class="fa fa-cog" aria-hidden="true"></i></button>

	</div>
	<br>-->
	<div class="content leftbox">
		<div class = "contentTitle">
			<h3>Filters</h3>
		</div>
		<br>
		<form id="compareForm" action="/timeline">
			<div class="container">
				<h6><strong>Period</strong></h6>
				<br>
				<div class="row">
					<div class="col">
						<p>Period start</p>
					</div>
					<div class="col-8">
						<input class="form-control" type="date" id="pStart1" value="2015-08-19" name="periodStart">
					</div>
				</div>
				<div class="row">
					<div class="col">
						<p>Period end</p>
					</div>
					<div class="col-8">
						<input class="form-control" type="date" id="pEnd1" value="2020-08-19" name="periodEnd">
					</div>
				</div>
				<br>
				<h6><strong>Price range</strong></h6>
				<br>
				<div class="row">
					<div class="col">
						<p>Minimum</p>
					</div>
					<div class="col-8">
						<input class="form-control" type="number" id="pMin" name="min">
					</div>
				</div>
				<div class="row">
					<div class="col">
						<p>Maximum</p>
					</div>
					<div class="col-8">
						<input class="form-control" type="number" id="pMax" name="max">
					</div>
				</div>
				<br>
				<h6><strong>Bill type</strong></h6>
				<div class="form-check-inline">
					<label class="form-check-label" for="check1">
						<input type="checkbox" class="form-check-input" name="incomes" id="bIncomes" value="true">Incomes
					</label>
				</div>
				<div class="form-check-inline">
					<label class="form-check-label" for="check2">
						<input type="checkbox" class="form-check-input" name="expenses" id="bExpenses" value="true">Expenses
					</label>
				</div>
				<div class="form-check-inline">
					<label class="form-check-label" for="check2">
						<input type="checkbox" class="form-check-input" name="investments" id="bInvestments" value="true">Investments
					</label>
				</div>
				<div class="form-check-inline">
					<label class="form-check-label" for="check2">
						<input type="checkbox" class="form-check-input" name="salaries" id="bSalaries" value="true">Salaries
					</label>
				</div>
				<br>
				<br>
				<h6><strong>Bill order</strong></h6>
				<div class="form-check-inline">
					<label class="form-check-label">
						<input type="radio" class="form-check-input" name="ascendent" id="ascendent" value="true">Ascendent
					</label>
				</div>
				<div class="form-check-inline">
					<label class="form-check-label">
						<input type="radio" class="form-check-input" name="ascendent" id="descendent" value="false">Descendent
					</label>
				</div>
				<input type="submit" class="btn btn-primary" value="Submit" style="float:right">
			</div>
		</form>
	</div>
	<div class="content rightbox">
		<div class="timelineContainer">
			<div class="contentTitle" style="margin-bottom:1%; height:44px">
				<h3 style="float:left">Bills Timeline</h3>
				<div style="float:right; margin-right:1%">
					<button class="butn" data-toggle="modal" data-target="#legendModal" style="widht:40px;"><i class="fa fa-info-circle" aria-hidden="true"></i></button>
				</div>

			</div>
			<div class="timeline">
				#set($even=true)
				#foreach($bill in $timeline.getBillList())
					#if($even)
					<div class="billContainer left">
						#set($even=false)
					#else
					<div class="billContainer right">
						#set($even=true)
					#end
					#if($bill.getType()!="nomina" && $bill.getIssuerRFC()==$RFC)
					<div class="box green" data-href="$bill.getUUID()">
					#elseif ($bill.getType()=="nomina" && $bill.getIssuerRFC()==$RFC)
					<div class="box orange" data-href="$bill.getUUID()">
					#elseif($bill.getUse()=="G01" || $bill.getUse()=="G02" || $bill.getUse()=="G03")
					<div class="box red" data-href="$bill.getUUID()">
					#else
					<div class="box blue" data-href="$bill.getUUID()">
					#end

					<div>
						<h2>$date.format("MMM dd, yyyy H:MM:SS a",$bill.getDate())</h2>
					</div>
					<div style="background-color: white; opacity:0.9 ">
						<h4>$bill.getConcept()</h4>
						<div class="billContainerAmount"><h4>$number.format("currency",$bill.getTotal())</h4></div>
					</div>
				</div>
				</div>
				#end
			</div>
		</div>
	</div>



		<div class="modal fade" id="legendModal">
			<div class="modal-dialog modal-dialog-centered">
				<div class="modal-content">

					<!-- Modal Header -->
					<div class="modal-header" style="background-color: rgb(234,241,247)">
						<h4 class="modal-title" >Timeline Legend</h4>
						<button type="button" class="close" data-dismiss="modal">&times;</button>
					</div>

					<!-- Modal body -->
					<div class="modal-body">
						<div style="margin-left:38%">
							<img src="/legendgreen.png" style="height:30px">
							<p style="display:inline">&nbsp&nbsp&nbspIncomes</p>
						</div>
						<br>
						<div style="margin-left:38%">
							<img src="/legendred.png" style="height:30px">
							<p style="display:inline">&nbsp&nbsp&nbspExpenses</p>
						</div>
						<br>
						<div style="margin-left:38%">
							<img src="/legendblue.png" style="height:30px">
							<p style="display:inline">&nbsp&nbsp&nbspInvestments</p>
						</div>
						<br>
						<div style="margin-left:38%">
							<img src="/legendyellow.png" style="height:30px">
							<p style="display:inline">&nbsp&nbsp&nbspSalaries</p>
						</div>
					</div>

					<!-- Modal footer -->
					<div class="modal-footer" style="background-color: rgb(234,241,247)">
						<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
					</div>
				</div>
			</div>
		</div>

</body>

