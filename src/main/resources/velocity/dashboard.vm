            </div>
        </div>




   </body>
</html>


<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript">


    google.charts.load('current', {'packages':['bar']});
    google.charts.setOnLoadCallback(drawChart);

    var data;
    var options;
    var chart;

    function drawChart() {
        data = google.visualization.arrayToDataTable([
            ['Bill type', 'Sales', 'Purchases', 'Investments', 'Salaries'],
            ['Bill type', 29765, 18921,8765,19765]
        ]);

        options = {
            chart: {
                title: 'Company Invoice distribution',
                subtitle: 'Incomes, Expenses, Investments and Salaries: 2014-2017',
            },
            bars: 'horizontal', // Required for Material Bar Charts.
            backgroundColor: 'rgb(247,250,252)',
            colors: ['rgb(23,164,111)','rgb(235,107,107)', 'rgb(121,202,207)', 'rgb(222,160,52)'],
            axes: {
                y: {
                    0: {label: ''} // Top x-axis.
                },
                x: {
                    0: {label: 'Amount ($)'}
                }
            }
        };

        chart = new google.charts.Bar(document.getElementById('billTypeChart'));

        chart.draw(data, google.charts.Bar.convertOptions(options));
    }



</script>

