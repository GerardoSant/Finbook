#parse("/velocity/layout.vm")
#mainLayout()

<style>

    footer{
        display:none
    }

    .box{
        margin-bottom: 2%;
        margin-right:1%;
        margin-left:1%;
        border-radius:5px;
        float:left;
    }

    .minibox{
        width:23%;
        height:100px;
        background-color: darkblue;
        color:white;
    }

    .minibox i{
        font-size:50px;
        margin-top:25px;
        margin-bottom:25px;
        margin-left: 22px;
        padding-right:10px;
        border-right:1px solid white;
        opacity:0.90;
    }

    .minibox-text{
        display: inline-block;
        padding-left:10px;
        vertical-align: middle;
        margin-bottom:15px;
        opacity:0.98;
    }

    .minibox-text h3{
        margin:0;
    }

    .minibox-text p{
        font-size:85%;
    }

    .boxrows-container{
        margin-left:1%;
        margin-right:1%;
    }

    .greenbox{
        background: rgb(20,107,26);
        background: linear-gradient(90deg, rgba(20,107,26,1) 3%, rgba(37,153,10,1) 62%, rgba(23,164,111,1) 100%);
    }

    .redbox{
        background: rgb(221,6,6);
        background: linear-gradient(90deg, rgba(221,6,6,1) 43%, rgba(250,0,0,1) 92%, rgba(235,107,107,1) 100%);
    }

    .bluebox{
        background: rgb(6,180,221);
        background: linear-gradient(90deg, rgba(6,180,221,1) 25%, rgba(63,188,244,1) 44%, rgba(121,202,207,1) 85%);
    }

    .orangebox{
        background: rgb(221,114,6);
        background: linear-gradient(90deg, rgba(221,114,6,1) 25%, rgba(244,145,63,1) 54%, rgba(222,160,52,1) 85%);
    }

    .minibox:hover{
        transform:scale(1.05);
    }

    @media screen and (max-width: 1400px){
        .boxrows-container .histogrambox{
            width:98%;
        }
        .boxrows-container .top5-box{
            width:98%;
        }

        .minibox{
            width:48%;
        }

    }

    @media screen and (max-width: 800px){
        .minibox{
            width:98%
        }
    }

    .histogrambox{
        width:60%;
        height:500px;
        background: rgb(247,250,252);
        box-shadow: 0 1px 5px rgba(0, 0, 0, 0.25);
        padding: 15px 15px 30px;
    }

    .top5-box{
        width:36%;
        height:500px;
        background: rgb(247,250,252);
        box-shadow: 0 1px 5px rgba(0, 0, 0, 0.25);
        padding: 15px 15px 30px;
    }


    #top5barchart{
        height:40%;
        border-bottom: 1px solid lightgrey;
    }

    #top5table{
        height:60%;
    }

    #billTypeChart{
        width:95%;
        height:95%
    }


</style>

